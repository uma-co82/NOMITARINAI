<%= stylesheet_link_tag "users/show", :media => "all" %>
<%= render 'shared/side_bar' %>
<div class="profile">
<%= attachment_image_tag @user, :profile_image, :fill, 300, 300 %>
<div class="profile_info">
<%= @user.name %>
<%= @user.introduce %>
<%= link_to "Back", :back %>
<% if @user.id == current_user.id %>
	<%= link_to "edit", edit_user_path(@user) %>
	<%= link_to "マッチング", match_user_path(@user) %>
	<%= render 'stats' %>
<% end %>
<%= render 'follow_form' %>
</div>
</div>
<div>
    <section class="message_box">
      <div id="messages">
        <%= render @messages %>
      </div>
    </section>
    <script type="text/javascript">
      var height = 0;
      $("div.message").each( function() {
        height += ($(this).height());
      });
      $('section.message_box').scrollTop(height);
    </script>
    <div class="message_form">
     <%= render 'messages/message_form',
       {from_user: current_user, to_user: @user, room_id: @room_id} %>
    </div>
</div>