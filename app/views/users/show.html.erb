<%= stylesheet_link_tag "users/show", :media => "all" %>
<%= render 'shared/side_bar' %>
<div id="overlay"></div>
<div class="profile">
<%= attachment_image_tag @user, :profile_image, :fill, 300, 300 %>
<div class="profile_info">
<%= @user.name %>
<%= @user.introduce %>
<%= link_to "Back", :back %>
<% if @user.id == current_user.id %>
	<%= link_to "edit", edit_user_path(@user) %>
	<%= link_to "マッチング", match_user_path(@user) %>
  <button id="open">予約一覧</button>
  <div id="modalWindow">
    <button id="clo">close</button>
    <table>
      <tr>
        <th>店名</th>
        <th>日時</th>
        <th>人数</th>
      </tr>
      <% @user.reservations.each do |r| %>
      <tr>
          <td><%= r.shop.shop_name%></td>
          <td><%= r.start_time %></td>
          <td><%= r.member_count%></td>
      </tr>
      <% end %>
    </table>
  </div>
	<%= render 'stats' %>
<% end %>
<%= render 'follow_form' %>
</div>
</div>
<% if !current_user?(@user) && logger? %>
<button id="chat_open">CHAT</button>
<div id="chat">
<button id="chat_close">Close</button>
    <section class="message_box">
      <div id="messages">
        <%= render @messages %>
      </div>
    </section>
    <script type="text/javascript">
      var height = 0;
      $("div.message").each( function() {
        height += ($(this).height());
      });
      $('section.message_box').scrollTop(height);
    </script>
    <div class="message_form">
     <%= render 'messages/message_form',
       {from_user: current_user, to_user: @user, room_id: @room_id} %>
    </div>
</div>
<% end %>