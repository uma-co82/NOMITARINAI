<% if @shop.errors.any?%>
  <div id="error_esplanation" class="alert alert-danger">
    <ul>
      <p style="font-size: 20px;">You have
      <%= @shop.errors.full_messages.count %>errors.</p>
      <%= @shop.errors.full_messages.each do |message|%>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if @shop.images.errors.any?%>
<% end %>

<div class="edit_form">
  <%= form_for(@shop) do |f|%>
    <%= render 'swiper'%>
    <div style="width: auto;">
    </div>
    <%= f.label :shop_image, "Image"%>
    <%= f.attachment_field :shop_image %>
    <%= f.attachment_field :images_images, multiple: true %>
    <%= f.attachment_field :images_images, multiple: true %>
    <%= f.attachment_field :images_images, multiple: true %>
    <%= f.attachment_field :images_images, multiple: true %>
    <%= f.attachment_field :images_images, multiple: true %>
    <%= f.attachment_field :images_images, multiple: true %>
    <%= f.attachment_field :images_images, multiple: true %>
    <%= f.label :shop_name, "Name"%>
    <%= f.text_field :shop_name %>
    <%= f.label :shop_info, "紹介"%>
    <%= f.text_area :shop_info %>
    <h3>Address</h3>
      <%= f.label :postcode, "Postcode"%>
      <%= f.number_field :postcode %>
      <%= f.label :prefecture_code, "都道府県"%><br>
      <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: true  %><br>
      <%= f.label :address, "市町村"%>
      <%= f.text_field :address %>
      <%= f.label :address_street, "番地"%>
      <%= f.text_field :address_street %>
      <%= f.label :address_building, "建物"%>
      <%= f.text_field :address_building %>
      <%= f.label :genre_id, "Genre"%>
      <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, {:prompt => "選択してください"} %><br>
      <%= f.label :station_id, "Station"%>
      <%= f.collection_select :station_id, Station.all, :id, :station_name, {:prompt => "選択してください"} %>
      <%= f.submit "Save" %>
  <% end %>
</div>