<%= stylesheet_link_tag "nomiya/index", :media => "all"%>
<%= render 'shared/side_bar'%>

<div class="shop_all">
					<% @shops.each do |shop| %>
				<div class="shop_box">
					<div class="shop_head">
						<div class="shop_image">
								<%= attachment_image_tag shop, :shop_image, fallback: "no_image.jpg" %>
						</div>
						<div class="shop_name_station">
							<div class="shop_name">
							<%= link_to (shop_path(shop.id)) do %>
								<p><%= shop.shop_name %></p>
							<% end %>
							</div>
							<div class="station">
								<p>最寄駅： <%= shop.station.station_name %></p>
							</div>
							<div class="genre">
								<p>ジャンル： <%= shop.genre.genre_name %></p>
							</div>
							<div class="address">
								<p>〒<%= shop.postcode %> <%= shop.prefecture.name %><%= shop.address %><%= shop.address_street %></p>
							</div>
								<% if shop.favorite_by?(current_user) %>
										<%= link_to fav_shops_path(shop), class: "fav", remote: true do %>
										<i class="fa-heart" id="<%= shop.id %>"></i>
									<% end %>
								<% else %>
										<%= link_to fav_shops_path(shop), class: "fav", remote: true do %>
										<i class="fa-heart-o" id="<%= shop.id %>"></i>
									<% end %>
								<% end %>
								<%= shop.favorites.count %>
						</div>
					</div>
					<div class="shop_info">
				   <p><%= shop.shop_info %></p>
				  </div>
			  </div>
				<% end %>
		</div>

<%= paginate @shops, class: "pagenate" %>