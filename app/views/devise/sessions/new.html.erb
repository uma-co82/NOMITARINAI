<%= stylesheet_link_tag "form/signup", :media => "all" %>


  <div class="overlay">
    <!-- <div class="logo"><img src="/assets/logo.png" height="500px" width="500px"/></div> -->
    <div class="intro">
      <button class="myBtn" onclick="fadeOut()">NOMINIIKU</button>
    </div>
  </div>

  <div class="overlay-2"></div>



<div class="container">
  <div class="row">
    <div>
<div class="signup">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h2>Login</h2>

  <div class="field">
    <%= f.label :email, "Email"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
  </div>

  <div class="field">
    <%= f.label :password, "Password"%>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="check">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div>
    <%= f.submit "Log in" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<%= link_to "Authors Log In", new_author_session_path %>
</div>
  </div>
</div>
</div>
  <script>

    function fadeOut() {

    TweenMax.to(".myBtn", 1, {
      y: -100,
      opacity: 0
    });

    TweenMax.to(".screen", 2, {
      y: -400,
      opacity: 0,
      ease: Power2.easeInOut,
      delay: 2
    });

    TweenMax.from(".overlay", 2, {
            ease: Power2.easeInOut
    });

    TweenMax.to(".overlay", 2, {
      delay: 2.6,
      top: "-110%",
      ease: Expo.easeInOut
    });

       TweenMax.to(".overlay-2", 2, {
            delay: 3,
            top: "-110%",
            ease: Expo.easeInOut
       });

       TweenMax.from(".signup", 2,{
            delay: 3.2,
            opacity: 0,
            ease: Power2.easeInOut
       });

       TweenMax.to(".signup", 2, {
            opacity: 1,
            y: -300,
            delay: 3.2,
            ease: Power2.easeInOut
       });

    }

  </script>
