<% if @shop.favorite_by?(current_user) %>
  <%= link_to fav_shops_path(@shop), class: "fav", remote: true do %>
    <i class="fa fa-kiss-wink-heart" id="<%= @shop.id %>"></i>
  <% end %>
<% else %>
  <%= link_to fav_shops_path(@shop), class: "fav", remote: true do %>
    <i class="fa fa-kiss-wink-heart out" id="<%= @shop.id %>"></i>
  <% end %>
<% end %>
